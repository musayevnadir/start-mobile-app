{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "ES2022",
    "baseUrl": ".",
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "paths": {
      "*": ["src/*"],
      "components/*": ["./src/components/*"],
      "assets/*": ["./src/assets/*"],
      "configs/*": ["./src/configs/*"],
      "hooks/*": ["./src/hooks/*"],
      "helpers/*": ["./src/helpers/*"],
      "router/*": ["./src/router/*"],
      "screens/*": ["./src/screens/*"],
      "services/*": ["./src/services/*"],
      "store/*": ["./src/store/*"],
      "theme/*": ["./src/theme/*"],
      "constants/*": ["./src/constants/*"],
      "types/*": ["./src/types/*"],
      "utils/*": ["./src/utils/*"],
      "core/*": ["./src/core/*"],
      "localization/*": ["./src/localization/*"],
      "dev/*": ["src/devtools/*"],
      "hocs/*": ["./src/hocs/*"],
      "mocks/*": ["./src/mocks/*"],
      "stacks/*": ["./src/stacks/*"],
      "container/*": ["./src/container/*"],
      "animations/*": ["./src/animations/*"],
      "reducers/*": ["./src/reducers/*"]
    }
  }
}
